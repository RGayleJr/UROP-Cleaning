{
  "compilerOptions": {
      "target": "es5",
      "baseUrl": "src",
      "rootDir": "src",
      "checkJs": false,
      "allowUnreachableCode": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noUnusedLocals": false,
      "removeComments": true,
      "strictNullChecks": false,
      "allowJs": true,
      "moduleResolution": "node",
      "lib": [
          "es6", "dom", "es7"
      ],
      
      "paths": {
        "@app/*": [
            "./*"
        ]
      },      
      "sourceMap": true,
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ]
  },
  "lib": [
      "dom",  "es6", "dom", "es2016"
  ],
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "nswag"
  ]
}